<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="84dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/table1Row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="#818080"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/table1Row2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/currencyPair"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="BTC/CAD"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="194dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="0dp"
                    android:text="..."
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#28940E"
                    android:textSize="16sp" />
            </TableRow>

        </TableLayout>
</androidx.cardview.widget.CardView>